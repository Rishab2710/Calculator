<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution_txtview"
        android:layout_width="391dp"
        android:layout_height="72dp"
        android:layout_above="@+id/result_txtview"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/result_txtview"
        android:layout_width="384dp"
        android:layout_height="69dp"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:gravity="end"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_pie"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="@string/pie"
                android:textColor="#FF5722"
                android:textSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_MC"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="MC"
                android:textColor="#FF5722"
                android:textSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_MR"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="MR"
                android:textColor="#FF5722"
                android:textSize="18dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_M_plus"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="M+"
                android:textColor="#FF5722"
                android:textSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_M_minus"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="M-"
                android:textColor="#FF5722"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_AC"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="AC"
                android:textColor="#FF5722"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="C"
                android:textColor="#FF5722"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_exponent"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="EXP"
                android:textColor="#FF5722"
                android:textSize="25dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="/"
                android:textColor="#FF5722"
                android:textSize="32dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="*"
                android:textColor="#FF5722"
                android:textSize="32dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subtract"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="-"
                android:textColor="#FF5722"
                android:textSize="32dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_addition"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="+"
                android:textColor="#FF5722"
                android:textSize="32dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_decimal"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="."
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_percentage"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="%"
                android:textColor="#FF5722"
                android:textSize="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="="
                android:textColor="#FF5722"
                android:textSize="32dp" />


        </LinearLayout>


    </LinearLayout>





</RelativeLayout>